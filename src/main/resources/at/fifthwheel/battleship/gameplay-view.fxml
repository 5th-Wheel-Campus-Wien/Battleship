<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.fifthwheel.battleship.GameplayController"
            prefHeight="720.0" prefWidth="1280.0">


    <GridPane fx:id="gameGridP1" gridLinesVisible="true"
              viewOrder="1">
        <!-- The grid is dynamically populated in the controller -->
    </GridPane>


    <GridPane fx:id="gameGridP2" gridLinesVisible="true"
              viewOrder="1">
        <!-- The grid is dynamically populated in the controller -->
    </GridPane>

    <Button fx:id="continueButton"
            text="Weiter"
            disable="true"
            visible="false"
            onAction="#continueToNextScene"/>

</AnchorPane>
