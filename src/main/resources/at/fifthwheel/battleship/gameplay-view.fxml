<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.fifthwheel.battleship.GameplayController"
            prefHeight="720.0" prefWidth="1280.0">

    <GridPane fx:id="gameGridP1" gridLinesVisible="true" viewOrder="1">
        <!-- The grid is dynamically populated in the controller -->
    </GridPane>


    <GridPane fx:id="gameGridP2" gridLinesVisible="true" viewOrder="1">
        <!-- The grid is dynamically populated in the controller -->
    </GridPane>


    <VBox alignment="CENTER" prefHeight="720" prefWidth="1280" spacing="20.0" pickOnBounds="false">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <children>
            <Label style="-fx-font-weight: bold;" fx:id="winnerLabel" alignment="CENTER" text="test" visible="false">
                <font>
                    <Font size="48.0" />
                </font>
            </Label>
            <Region prefHeight="400.0" prefWidth="1240.0" visible="false"/>
            <Button fx:id="continueButton" alignment="CENTER" disable="true" onAction="#continueToNextScene" text="Weiter" visible="false">
                <font>
                    <Font size="24.0" />
                </font>
            </Button>
        </children>
    </VBox>

</AnchorPane>
