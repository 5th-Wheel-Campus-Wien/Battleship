<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="720" prefWidth="1280" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fifthwheel.battleship.PlayerNameController">
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold" text="Welcome to Battleship" />

    <RadioButton fx:id="singlePlayerButton" text="Single Player" />
    <RadioButton fx:id="multiPlayerButton" text="Multi Player" />

    <TextField fx:id="player1NameField" promptText="Player 1" />
    <TextField fx:id="player2NameField" disable="true" promptText="Player 2" />

    <Button fx:id="startButton" style="-fx-font-size: 20px;" text="Start" />
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
